<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="Enter task name"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGray"
        android:backgroundTint="@color/white"
        android:inputType="text" />

    <!-- Inline time picker -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:timePickerMode="spinner" />

    <!-- Inline calendar â€” now fully dark -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/backgroundDark"
        android:weekSeparatorLineColor="@android:color/transparent"
        android:selectedWeekBackgroundColor="@color/darkGray"
        android:focusedMonthDateColor="@color/white"
        android:unfocusedMonthDateColor="@color/lightGray"
        android:weekDayTextAppearance="@style/CalendarWeekDayText"
        android:dateTextAppearance="@style/CalendarDateText" />

    <!-- Save -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:text="@string/add_task"
        android:textColor="@color/white"
        app:backgroundTint="@color/accentBlue" />
</LinearLayout>
